<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.PaymentTableFormController"
            prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #E0C3FC, #8EC5FC);">

    <children>
        <!-- Header -->
        <HBox layoutX="40.0" layoutY="25.0" spacing="15.0"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15;">
            <children>
                <ImageView fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@asset/icon/icons8-payment-48.png"/>
                    </image>
                </ImageView>

                <Label text="Payment Records" textFill="white">
                    <font>
                        <Font name="Arial Black" size="26.0"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Table -->
        <TableView fx:id="tblPayments" layoutX="50.0" layoutY="120.0"
                   prefWidth="700.0" prefHeight="320.0" editable="true"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
            <columns>
                <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="120.0"/>
                <TableColumn fx:id="colStudent" text="Student" prefWidth="150.0"/>
                <TableColumn fx:id="colProgram" text="Program" prefWidth="150.0"/>
                <TableColumn fx:id="colAmount" text="Amount (LKR)" prefWidth="120.0"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="120.0"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120.0"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
