<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="700.0" prefWidth="850.0"
            style="-fx-background-color: linear-gradient(to bottom right, #fefefe, #f1f5f9);"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.DashboardController">

    <children>

        <!-- Title -->
        <Label layoutX="40.0" layoutY="35.0" text="ðŸ“Š Dashboard" textFill="#2563EB">
            <font>
                <Font name="Arial Black" size="32.0" />
            </font>
        </Label>

        <!-- Card 1 (Blue Gradient) -->
        <Pane layoutX="30.0" layoutY="110.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 18; -fx-background-color: linear-gradient(to right, #3B82F6, #06B6D4); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="55.0" layoutY="18.0" text="Total Student" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalStudent" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Card 2 (Purple Gradient) -->
        <Pane layoutX="300.0" layoutY="110.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 18; -fx-background-color: linear-gradient(to right, #8B5CF6, #6366F1); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="60.0" layoutY="18.0" text="Total Course" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalPrograms" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Card 3 (Orange/Coral Gradient) -->
        <Pane layoutX="570.0" layoutY="110.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 18; -fx-background-color: linear-gradient(to right, #F97316, #FACC15); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="35.0" layoutY="18.0" text="Total Instructor" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalInstructor" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Student Table -->
        <TableView fx:id="tblStudyAll" layoutX="30.0" layoutY="260.0" prefHeight="200.0" prefWidth="760.0"
                   style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 3);">
            <columns>
                <TableColumn fx:id="colId" text="Student ID" prefWidth="200.0"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="280.0"/>
                <TableColumn fx:id="colDate" text="Registration Date" prefWidth="280.0"/>
            </columns>
        </TableView>

        <!-- Bar Chart -->
        <BarChart fx:id="BarChartStu" layoutX="30.0" layoutY="480.0" prefHeight="170.0" prefWidth="760.0"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0.3, 0, 3);">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>

        <!-- Income Section -->
        <Label layoutX="30.0" layoutY="665.0" text="ðŸ’° Monthly Income :" textFill="#111827">
            <font>
