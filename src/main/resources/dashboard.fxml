<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f9f9f9, #eef2f3);"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.DashboardController">

    <children>

        <!-- Title -->
        <Label layoutX="113.0" layoutY="46.0" text="Dashboard" textFill="#4A90E2">
            <font>
                <Font name="Arial Black" size="32.0" />
            </font>
        </Label>



        <!-- Card 1 (Blue Gradient) -->
        <Pane layoutX="30.0" layoutY="138.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 15; -fx-background-color: linear-gradient(to right, #4A90E2, #50E3C2); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="50.0" layoutY="18.0" text="Total Student" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalStudent" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Card 2 (Purple Gradient) -->
        <Pane layoutX="276.0" layoutY="138.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 15; -fx-background-color: linear-gradient(to right, #8E2DE2, #4A00E0); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="55.0" layoutY="18.0" text="Total Course" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalPrograms" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Card 3 (Orange/Yellow Gradient) -->
        <Pane layoutX="520.0" layoutY="138.0" prefHeight="120.0" prefWidth="220.0"
              style="-fx-background-radius: 15; -fx-background-color: linear-gradient(to right, #F7971E, #FFD200); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.5, 0, 4);">
            <children>
                <Label layoutX="35.0" layoutY="18.0" text="Total Instructor" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalInstructor" alignment="CENTER" layoutX="85.0" layoutY="60.0"
                       prefHeight="40.0" prefWidth="60.0" text="0" textFill="WHITE">
                    <font>
                        <Font name="Arial Black" size="28.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Student Table -->
        <TableView fx:id="tblStudyAll" layoutX="28.0" layoutY="280.0" prefHeight="180.0" prefWidth="701.0"
                   style="-fx-background-color: white; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colId" text="Student ID" prefWidth="200.0"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="250.0"/>
                <TableColumn fx:id="colDate" text="Registration Date" prefWidth="250.0"/>
            </columns>
        </TableView>

        <!-- Bar Chart -->
        <BarChart fx:id="BarChartStu" layoutX="28.0" layoutY="470.0" prefHeight="150.0" prefWidth="701.0"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.3, 0, 3);">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>

        <!-- Income -->
        <Label layoutX="28.0" layoutY="630.0" text="Monthly Income :" textFill="#1c1e21">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>

        <Label fx:id="lblIncom" alignment="CENTER" layoutX="220.0" layoutY="627.0" prefHeight="28.0" prefWidth="206.0"
               text="0" textFill="#4A90E2">
            <font>
                <Font name="Arial Black" size="26.0" />
            </font>
        </Label>

        <!-- Student Count Label -->
        <Label fx:id="lblStudentCount" layoutX="500.0" layoutY="627.0" text="0" textFill="#1c1e21">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
