<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="instructorForm" prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e6f2ff);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.InstructorFormController">

    <children>
        <!-- Header -->
        <HBox layoutX="40" layoutY="25" spacing="15"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <children>
                <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@asset/icon/online-learning.png"/>
                    </image>
                </ImageView>
                <Label text="Instructor Management" textFill="white">
                    <font>
                        <Font name="Arial Black" size="28"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Input Fields Card -->
        <VBox layoutX="50" layoutY="120" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
            <children>
                <!-- ID & Search -->
                <HBox spacing="20">
                    <HBox spacing="15">
                        <Label prefWidth="120" text="ID:"/>
                        <TextField fx:id="txtInstructorId" editable="false" prefWidth="200" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label prefWidth="60" text="Search:"/>
                        <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased" prefWidth="250" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                </HBox>

                <!-- Name & Specialization -->
                <HBox spacing="20">
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Name:"/>
                        <TextField fx:id="txtName" prefWidth="250" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Specialization:"/>
                        <TextField fx:id="txtSpecialization" prefWidth="250" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                </HBox>
            </children>
        </VBox>

        <!-- Buttons -->
        <HBox layoutX="200" layoutY="300" spacing="15">
            <JFXButton fx:id="btnClear" onAction="#btnClearOnAction" prefWidth="95" style="-fx-background-color: #95a5a6; -fx-background-radius: 12; -fx-text-fill: white;" text="Clear"/>
            <JFXButton fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="130" style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-text-fill: white;" text="Update"/>
            <JFXButton fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="130" style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-text-fill: white;" text="Delete"/>
            <JFXButton fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="130" style="-fx-background-color: #27ae60; -fx-background-radius: 12; -fx-text-fill: white;" text="Save"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="tblInstructor" layoutX="50" layoutY="400" prefHeight="200" prefWidth="700"
                   onMouseClicked="#tblInstructorOnClickAction"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="120" text="ID"/>
                <TableColumn fx:id="colName" prefWidth="200" text="Name"/>
                <TableColumn fx:id="colSpecialization" prefWidth="200" text="Specialization"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
