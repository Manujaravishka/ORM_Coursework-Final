<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="instructorForm" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.InstructorFormController"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #e6f2ff);">

    <!-- Header -->
    <HBox spacing="15" style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Instructor Management" textFill="white">
            <font>
                <Font name="Arial Black" size="28"/>
            </font>
        </Label>
    </HBox>

    <!-- Input Fields Card -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);"
          AnchorPane.topAnchor="100" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <!-- ID & Search -->
        <HBox spacing="20">
            <HBox spacing="15" HBox.hgrow="ALWAYS">
                <Label prefWidth="120" text="ID:"/>
                <TextField fx:id="txtInstructorId" editable="false" HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
            </HBox>
            <HBox spacing="15" HBox.hgrow="ALWAYS">
                <Label prefWidth="60" text="Search:"/>
                <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased" HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
            </HBox>
        </HBox>

        <!-- Name & Specialization -->
        <HBox spacing="20">
            <HBox spacing="15" HBox.hgrow="ALWAYS">
                <Label prefWidth="120" text="Name:"/>
                <TextField fx:id="txtName" HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
            </HBox>
            <HBox spacing="15" HBox.hgrow="ALWAYS">
                <Label prefWidth="120" text="Specialization:"/>
                <TextField fx:id="txtSpecialization" HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
            </HBox>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="15" AnchorPane.topAnchor="280" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" alignment="CENTER">
        <JFXButton fx:id="btnClear" onAction="#btnClearOnAction" HBox.hgrow="ALWAYS" style="-fx-background-color: #95a5a6; -fx-background-radius: 12; -fx-text-fill: white;" text="Clear"/>
        <JFXButton fx:id="btnUpdate" onAction="#btnUpdateOnAction" HBox.hgrow="ALWAYS" style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-text-fill: white;" text="Update"/>
        <JFXButton fx:id="btnDelete" onAction="#btnDeleteOnAction" HBox.hgrow="ALWAYS" style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-text-fill: white;" text="Delete"/>
        <JFXButton fx:id="btnSave" onAction="#btnSaveOnAction" HBox.hgrow="ALWAYS" style="-fx-background-color: #27ae60; -fx-background-radius: 12; -fx-text-fill: white;" text="Save"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblInstructor" AnchorPane.topAnchor="350" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
               onMouseClicked="#tblInstructorOnClickAction"
               style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="120"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
            <TableColumn fx:id="colSpecialization" text="Specialization" prefWidth="200"/>
        </columns>
    </TableView>
</AnchorPane>
