<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="lessonForm" prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #fef3e2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.LessonFormController">

    <children>
        <!-- Header -->
        <HBox layoutX="40" layoutY="25" spacing="15"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <children>
                <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@asset/icon/lesson.png"/>
                    </image>
                </ImageView>
                <Label text="Lesson Management" textFill="white">
                    <font>
                        <Font name="Arial Black" size="28"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Input Fields Card -->
        <VBox layoutX="50" layoutY="120" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
            <children>
                <!-- Lesson ID & Date -->
                <HBox spacing="20">
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Lesson ID:"/>
                        <TextField fx:id="txtLessonId" editable="false" prefWidth="200" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label prefWidth="130" text="Lesson Date:"/>
                        <DatePicker fx:id="dateLesson" prefWidth="200" style="-fx-background-radius: 10;"/>
                    </HBox>
                </HBox>

                <!-- Student & Course -->
                <HBox spacing="20">
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Student:"/>
                        <ComboBox fx:id="cmbStudent" prefWidth="200" style="-fx-background-radius: 10;"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Course:"/>
                        <ComboBox fx:id="cmbCourse" prefWidth="200" style="-fx-background-radius: 10;"/>
                    </HBox>
                </HBox>

                <!-- Instructor & Time -->
                <HBox spacing="20">
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Instructor:"/>
                        <ComboBox fx:id="cmbInstructor" prefWidth="200" style="-fx-background-radius: 10;"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label prefWidth="120" text="Time:"/>
                        <TextField fx:id="txtTime" promptText="HH:mm:ss" prefWidth="200" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    </HBox>
                </HBox>

                <!-- Duration -->
                <HBox spacing="15">
                    <Label prefWidth="120" text="Duration:"/>
                    <TextField fx:id="txtDuration" promptText="Minutes (e.g. 90)" prefWidth="200" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                </HBox>
            </children>
        </VBox>

        <!-- Buttons -->
        <HBox layoutX="200" layoutY="360" spacing="15">
            <JFXButton fx:id="btnClear" onAction="#btnClearOnAction" prefWidth="95" style="-fx-background-color: #95a5a6; -fx-background-radius: 12; -fx-text-fill: white;" text="Clear"/>
            <JFXButton fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="130" style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-text-fill: white;" text="Update"/>
            <JFXButton fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="130" style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-text-fill: white;" text="Delete"/>
            <JFXButton fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="130" style="-fx-background-color: #27ae60; -fx-background-radius: 12; -fx-text-fill: white;" text="Save"/>
        </HBox>

        <!-- Search Field -->
        <HBox layoutX="400" layoutY="120" spacing="10">
            <children>
                <Label text="Search:" prefWidth="60"/>
                <TextField fx:id="txtSearch" onKeyReleased="#txtSearchKeyReleased" prefWidth="250" style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
            </children>
        </HBox>

        <!-- Table -->
        <TableView fx:id="tblLesson" layoutX="50" layoutY="440" prefHeight="180" prefWidth="700"
                   onMouseClicked="#tblLessonOnClickAction"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD;">
            <columns>
                <TableColumn fx:id="colLessonId" prefWidth="100" text="Lesson ID"/>
                <TableColumn fx:id="colStudent" prefWidth="120" text="Student"/>
                <TableColumn fx:id="colCourse" prefWidth="120" text="Course"/>
                <TableColumn fx:id="colInstructor" prefWidth="120" text="Instructor"/>
                <TableColumn fx:id="colDate" prefWidth="100" text="Date"/>
                <TableColumn fx:id="colTime" prefWidth="80" text="Time"/>
                <TableColumn fx:id="colDuration" prefWidth="100" text="Duration"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
