<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom, #79d6f8, #e2f3fc);"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.Dashboard2Controller">

    <!-- Back Button -->
    <Button layoutX="20.0" layoutY="20.0" text="← Back" onAction="#goBackOnAction"
            style="-fx-background-radius: 20; -fx-background-color: #ffffff; -fx-cursor: hand;">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
    </Button>

    <!-- Dashboard Title -->
    <Label layoutX="120.0" layoutY="25.0" text="Dashboard">
        <font>
            <Font name="DejaVu Serif Condensed Bold" size="32.0"/>
        </font>
    </Label>

    <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="50.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@assest/Driving School.jpg"/>
        </image>
    </ImageView>

    <!-- Stats Cards -->
    <Pane layoutX="30.0" layoutY="100.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 25;">
        <effect>
            <DropShadow radius="10" color="rgba(0,0,0,0.4)"/>
        </effect>
        <children>
            <Label layoutX="40.0" layoutY="15.0" text="Total Student" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalStudent" alignment="CENTER" layoutX="85.0" layoutY="55.0" prefHeight="30.0" prefWidth="50.0" text="0" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="25.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <Pane layoutX="280.0" layoutY="100.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 25;">
        <effect>
            <DropShadow radius="10" color="rgba(0,0,0,0.4)"/>
        </effect>
        <children>
            <Label layoutX="45.0" layoutY="15.0" text="Total Course" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalPrograms" alignment="CENTER" layoutX="90.0" layoutY="55.0" prefHeight="30.0" prefWidth="50.0" text="0" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="25.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <Pane layoutX="530.0" layoutY="100.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-color: linear-gradient(to bottom, #17285c, #3888fd); -fx-background-radius: 25;">
        <effect>
            <DropShadow radius="10" color="rgba(0,0,0,0.4)"/>
        </effect>
        <children>
            <Label layoutX="30.0" layoutY="15.0" text="Total Instructor" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalInstructor" alignment="CENTER" layoutX="90.0" layoutY="55.0" prefHeight="30.0" prefWidth="50.0" text="0" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Condensed Bold" size="25.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <!-- TableView for Students -->
    <TableView fx:id="tblStudyAll" layoutX="50.0" layoutY="230.0" prefHeight="200.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="200.0" text="Student ID"/>
            <TableColumn fx:id="colName" prefWidth="300.0" text="Student Name"/>
            <TableColumn fx:id="colDate" prefWidth="200.0" text="Registration Date"/>
        </columns>
    </TableView>

    <!-- Bar Chart -->
    <BarChart fx:id="BarChartStu" layoutX="50.0" layoutY="450.0" prefHeight="200.0" prefWidth="700.0">
        <xAxis>
            <CategoryAxis side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT"/>
        </yAxis>
    </BarChart>

    <!-- Monthly Income -->
    <Label layoutX="400.0" layoutY="660.0" text="Monthly Income:" opacity="1">
        <font>
            <Font name="DejaVu Sans Condensed Bold" size="20.0"/>
        </font>
    </Label>
    <Label fx:id="lblIncom" alignment="CENTER" layoutX="600.0" layoutY="660.0" prefHeight="25.0" prefWidth="180.0"
           text="0" textFill="#19792b">
        <font>
            <Font name="DejaVu Sans Mono Bold" size="24.0"/>
        </font>
    </Label>
</AnchorPane>
