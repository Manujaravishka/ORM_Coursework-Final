<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardFrom" prefHeight="650.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to right, #74ebd5, #ACB6E5);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.MainFormController">

    <children>
        <!-- Right side content area -->
        <AnchorPane fx:id="changeForm" layoutX="220.0" layoutY="10.0"
                    prefHeight="630.0" prefWidth="770.0"
                    style="-fx-background-color: white; -fx-background-radius: 15;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" />

        <!-- Sidebar image (logo/user profile) -->
        <ImageView fitHeight="200.0" fitWidth="200.0"
                   layoutX="10.0" layoutY="20.0"
                   pickOnBounds="true" preserveRatio="true"
                   style="-fx-background-radius: 50;">
            <image>
                <Image url="@asset/b309d6ac516610c8ae112e9e677db21a.jpg"/>
            </image>
        </ImageView>

        <!-- Sidebar Menu -->
        <VBox layoutX="15.0" layoutY="230.0" spacing="12.0"
              prefHeight="380.0" prefWidth="190.0"
              style="-fx-background-color: rgba(255,255,255,0.2);
                   -fx-background-radius: 15; -fx-padding: 10;">
            <children>
                <JFXButton fx:id="btnDashboard" text="Dashboard"
                           onAction="#btnDashboardOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;">
                    <font>
                        <Font name="Arial Bold" size="16.0"/>
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnStudent" text="Manage Student"
                           onAction="#btnStudentOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnProgram" text="Manage Course"
                           onAction="#btnProgramOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnInstructor" text="Manage Instructor"
                           onAction="#btnInstructorOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnPayment" text="Manage Payment"
                           onAction="#btnPaymentOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnLessons" text="Manage Lessons"
                           onAction="#btnLessonsOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnView" text="View All"
                           onAction="#btnViewOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>

                <JFXButton fx:id="btnSetting" text="Settings"
                           onAction="#btnSettingOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                              -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;
                              -fx-border-width: 2; -fx-border-radius: 10;"/>
            </children>
        </VBox>

        <!-- Logout Icon -->
        <ImageView fitHeight="40.0" fitWidth="40.0"
                   layoutX="95.0" layoutY="600.0"
                   onMouseClicked="#logOutAction"
                   pickOnBounds="true" preserveRatio="true"
                   style="-fx-cursor: hand;">
            <image>
                <Image url="@asset/icon/icons8-log-out-48.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
