<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardFrom" style="-fx-background-color: #456882;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.MainFormController">

    <children>
        <!-- Right side content area -->
        <AnchorPane fx:id="changeForm"
                    style="-fx-background-color: white;
                           -fx-background-radius: 15;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);"
                    AnchorPane.topAnchor="20.0"
                    AnchorPane.bottomAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.leftAnchor="240.0" />

        <!-- Sidebar Menu -->
        <VBox spacing="15.0"
              style="-fx-background-color: linear-gradient(to bottom, #345678, #1e2f45);
                     -fx-background-radius: 20;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 2, 2);"
              AnchorPane.topAnchor="40.0"
              AnchorPane.bottomAnchor="40.0"
              AnchorPane.leftAnchor="15.0"
              prefWidth="200.0">

            <children>
                <!-- Dashboard -->
                <JFXButton fx:id="btnDashboard" onAction="#btnDashboardOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: #1a2e3f; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-cursor: hand; -fx-font-weight: bold;"
                           text="Dashboard">
                    <font>
                        <Font name="Arial Bold" size="15.0"/>
                    </font>
                </JFXButton>

                <!-- Manage Student -->
                <JFXButton fx:id="btnStudent" onAction="#btnStudentOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Manage Student" />

                <!-- Manage Course -->
                <JFXButton fx:id="btnProgram" onAction="#btnProgramOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Manage Course" />

                <!-- Manage Instructor -->
                <JFXButton fx:id="btnInstructor" onAction="#btnInstructorOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Manage Instructor" />

                <!-- Payment -->
                <JFXButton fx:id="btnPayment1" onAction="#btnPaymentssssOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Payment" />

                <!-- Payment Table -->
                <JFXButton fx:id="btnPayment" onAction="#btnPaymentOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Payment Table" />

                <!-- Manage Lessons -->
                <JFXButton fx:id="btnLessons" onAction="#btnLessonsOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Manage Lessons" />

                <!-- View All -->
                <JFXButton fx:id="btnView" onAction="#btnViewOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="View All" />

                <!-- Settings -->
                <JFXButton fx:id="btnSetting" onAction="#btnSettingOnAction"
                           prefHeight="45.0" prefWidth="180.0"
                           style="-fx-background-color: transparent; -fx-text-fill: white;
                                  -fx-font-size: 15px; -fx-background-radius: 12;
                                  -fx-border-color: white; -fx-border-radius: 12;
                                  -fx-border-width: 2; -fx-cursor: hand;"
                           text="Settings" />
            </children>
        </VBox>
    </children>
</AnchorPane>
