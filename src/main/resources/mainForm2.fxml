<AnchorPane fx:id="dashboardFrom" prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #456882;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.orm_final_course_work.controller.MainForm2Controller">

    <children>
        <!-- Main Content Area -->
        <AnchorPane fx:id="changeForm" layoutX="220.0" layoutY="10.0" prefHeight="630.0" prefWidth="770.0" style="-fx-background-color: wite; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2),10,0,2,2);" />

        <!-- Logo / Image -->

        <!-- Sidebar Menu -->
        <VBox layoutX="12.0" layoutY="220.0" prefWidth="200.0" spacing="12.0">
            <children>
                <JFXButton fx:id="btnDashboard" onAction="#btnDashboardOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #1976d2; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Dashboard">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnStudent" onAction="#btnStudentOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #42a5f5; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Manage Student" />

                <JFXButton fx:id="btnProgram" onAction="#btnProgramOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #42a5f5; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Manage Course" />

                <JFXButton fx:id="btnInstructor" onAction="#btnInstructorOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #42a5f5; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Manage Instructor" />

                <JFXButton fx:id="btnPayment" onAction="#btnPaymentOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #42a5f5; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Manage Payment" />

                <JFXButton fx:id="btnLessons" onAction="#btnLessonsOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #42a5f5; -fx-text-fill: white;                                   -fx-background-radius: 10; -fx-cursor: hand;" text="Manage Lessons" />
