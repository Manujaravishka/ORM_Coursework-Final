<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="settingForm"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.orm_final_course_work.controller.SettingFormController"
            prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #FFDEE9, #B5FFFC);">

    <children>
        <!-- Header -->
        <HBox layoutX="40.0" layoutY="25.0" spacing="15.0"
              style="-fx-background-color: rgba(0,0,0,0.75); -fx-background-radius: 15; -fx-padding: 15;">
            <children>

                <Label text="Settings" textFill="white">
                    <font>
                        <Font name="Arial Black" size="26.0"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Change User Details Card -->
        <VBox layoutX="60.0" layoutY="120.0" spacing="20.0" alignment="TOP_CENTER"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);"
              prefWidth="680" prefHeight="180">

            <Label text="Change User Details"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="20" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints minWidth="220"/>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints minWidth="220"/>
                </columnConstraints>

                <!-- Username -->
                <Label text="User Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUserName" onAction="#txtUserNameOnAction"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;"/>

                <!-- Password -->
                <Label text="Password:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <PasswordField fx:id="txtPassword" onAction="#txtPasswordOnAction"
                               GridPane.rowIndex="0" GridPane.columnIndex="3"
                               style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;"/>

                <!-- New Password -->
                <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtNewPassword" onAction="#txtNewPasswordOnAction"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"
                               style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;"/>

                <!-- Confirm Password -->
                <Label text="Confirm Password:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <PasswordField fx:id="txtConfirmPassword"
                               GridPane.rowIndex="1" GridPane.columnIndex="3"
                               style="-fx-background-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;"/>
            </GridPane>

            <!-- Update Button -->
            <JFXButton text="Update" onAction="#btnUpdateOnAction"
                       style="-fx-background-color: #1F45FC; -fx-background-radius: 12; -fx-text-fill: white;
                              -fx-padding: 8 20; -fx-font-size: 14px;"/>
        </VBox>

        <!-- User Table Card -->
        <VBox layoutX="60.0" layoutY="330.0" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);"
              prefWidth="680" prefHeight="270">

            <Label text="Show User Details"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="tblUser" prefHeight="200.0" prefWidth="640.0">
                <columns>
                    <TableColumn fx:id="colUserName" prefWidth="220.0" text="User Name"/>
                    <TableColumn fx:id="colUserRole" prefWidth="220.0" text="User Role"/>
                    <TableColumn fx:id="colDelete" prefWidth="100.0" text="Action"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
