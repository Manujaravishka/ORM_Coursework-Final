<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="signUpForm" prefHeight="450.0" prefWidth="360.0"
            style="-fx-background-color: linear-gradient(to bottom, #c9e7f2, #f8f9fa);"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.SignUpFormController">
    <children>
        <!-- Card Container -->
        <AnchorPane layoutX="25.0" layoutY="60.0" prefHeight="360.0" prefWidth="310.0"
                    style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
            <children>
                <!-- Title -->
                <Label layoutX="95.0" layoutY="20.0" text="Sign Up" textFill="#333333">
                    <font>
                        <Font name="Arial Bold" size="28.0"/>
                    </font>
                </Label>

                <!-- Username Field -->
                <TextField fx:id="inputUserName" layoutX="35.0" layoutY="80.0" onAction="#inputUserNameOnAction"
                           prefHeight="40.0" prefWidth="240.0" promptText="Username"
                           style="-fx-background-radius: 10; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-padding: 0 0 0 10;"/>

                <!-- Password Field -->
                <PasswordField fx:id="inputPassword" layoutX="35.0" layoutY="135.0"
                               prefHeight="40.0" prefWidth="240.0" promptText="Password"
                               style="-fx-background-radius: 10; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-padding: 0 0 0 10;"/>

                <!-- Role Checkboxes -->
                <CheckBox fx:id="adminCheckBox" layoutX="35.0" layoutY="190.0" mnemonicParsing="false"
                          onAction="#adminCheckBoxOnAction" text="Admin" textFill="#444444">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </CheckBox>

                <CheckBox fx:id="admissionCheckBox" layoutX="140.0" layoutY="190.0" mnemonicParsing="false"
                          onAction="#admissionCheckBoxOnAction" text="Admissions Coordinator" textFill="#444444">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </CheckBox>

                <!-- Sign Up Button -->
                <Button layoutX="90.0" layoutY="240.0" mnemonicParsing="false" onAction="#signUpBtnOnAction"
                        prefHeight="45.0" prefWidth="130.0"
                        style="-fx-background-color: linear-gradient(to right, #3a6073, #16222a);
                               -fx-background-radius: 22; -fx-cursor: hand;"
                        text="SIGN UP" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="15.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>

        <!-- Custom Back Button -->
        <Button layoutX="15.0" layoutY="15.0" prefHeight="35.0" prefWidth="80.0" text="← Back"
                onAction="#backToLoginOnAction"
                style="-fx-background-color: #0288D1; -fx-background-radius: 18; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </children>
</AnchorPane>
