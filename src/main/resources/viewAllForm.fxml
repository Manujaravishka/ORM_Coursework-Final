<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>

<AnchorPane prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f0e7e3);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final_course_work.controller.ViewAllFormController">

    <children>
        <!-- Header -->
        <HBox layoutX="40" layoutY="25" spacing="15"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <children>
                <Label text="View Students" textFill="white">
                    <font>
                        <Font name="Arial Black" size="28"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Controls Card -->
        <VBox layoutX="50" layoutY="120" spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
            <children>
                <HBox spacing="15">
                    <Label text="Select Program :" prefWidth="150"/>
                    <ChoiceBox fx:id="selectPrgramChoiceBox" prefWidth="250"
                               style="-fx-background-radius: 10; -fx-border-color: #CCC; -fx-padding: 6;"/>
                    <JFXButton text="Refresh" onAction="#refreshTblOnClickAction"
                               style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-text-fill: white; -fx-pref-width: 100;"/>
                </HBox>
            </children>
        </VBox>

        <!-- Students Table -->
        <TableView fx:id="viewTbl" layoutX="50" layoutY="240"
                   prefHeight="280" prefWidth="700"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD;">
            <columns>
                <TableColumn fx:id="colStudentId" prefWidth="100" text="Student ID"/>
                <TableColumn fx:id="colStudentName" prefWidth="160" text="Student Name"/>
                <TableColumn fx:id="colRegisterDate" prefWidth="140" text="Register Date"/>
                <TableColumn fx:id="colInstallment" prefWidth="140" text="1st Installment"/>
                <TableColumn fx:id="colBalance" prefWidth="120" text="Balance"/>
                <TableColumn fx:id="colPayment" prefWidth="120" text="Payment"/>
            </columns>
        </TableView>

        <!-- Footer with Count -->
        <HBox layoutX="450" layoutY="560" spacing="10">
            <children>
                <Label text="Student Count :" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Label fx:id="lblStudentCount" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
